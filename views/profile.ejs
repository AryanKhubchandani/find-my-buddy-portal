  <body>
    <%- include('header'); -%>

    <div class="user_profile">
      <h1>Welcome to your profile, <%= user.username %></h1>
      <main>
        <img src="<%= user.thumbnail %>" />
      </main>
      <section class="upload" id="upload">
        <h2 class="text-centre">Upload pet's details</h2>
        <div class="form">
          <form method="post" action="/upload" enctype="multipart/form-data">
            <input
              class="form-input"
              type="text"
              name="phone"
              id="phone"
              placeholder="Enter your phone"
            />
            <input
              class="form-input"
              type="text"
              name="name"
              id="name"
              placeholder="Enter the pet's name"
            />
            <input
              class="form-input"
              type="text"
              name="species"
              id="species"
              placeholder="Enter the pet's species"
            />
            <input
              class="form-input"
              type="text"
              name="age"
              id="age"
              placeholder="Enter age of your pet"
            /><br />
            <input
              class="form-input"
              type="text"
              name="breed"
              id="breed"
              placeholder="Enter breed of your pet"
            /><br />
            Vaccination Status: &nbsp;&nbsp;&nbsp;
            <input type="radio" name="Vaccination" id="Yes" value="Yes" />Yes
            &nbsp;&nbsp;&nbsp;
            <input type="radio" name="Vaccination" id="no" value="No" />No
            <input
              class="form-input"
              type="text"
              name="location"
              id="location"
              placeholder="Enter your location"
            /><br />
            <textarea
              class="form-input"
              name="text"
              id="text"
              cols="30"
              rows="10"
              placeholder="Your pet description"
            ></textarea>
            Upload Image here:<input
              type="file"
              id="image"
              name="image"
              class="btn"
            /><br />
            <button type="submit" class="btn btn-sm btn-dark">Submit</button>
          </form>
        </div>
      </section>
    </div>

